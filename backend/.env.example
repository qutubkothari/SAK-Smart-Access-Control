# Backend Environment Variables

# Server
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sak_access_control
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# AWS
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=sak-access-control-uploads

# Email (AWS SES)
EMAIL_FROM=noreply@sak-access.com
EMAIL_FROM_NAME=SAK Access Control
AWS_SES_REGION=ap-south-1

# SMS/WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# WhatsApp (WAPI HTTP)
# Either set WAPI_* or use the SAK_* names (both are supported)
WAPI_SEND_URL=http://wapi.saksolution.com/api/v1/messages/send
WAPI_API_KEY=
WAPI_SESSION_ID=
SAK_API_KEY=
SAK_SESSION_ID=

# QR Code
QR_CODE_EXPIRY_HOURS=24
QR_CODE_SECRET=your_qr_secret_key

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://3.108.52.219

# Notifications
NOTIFICATION_REMINDER_MINUTES=30
NOTIFICATION_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# WebSocket
SOCKET_IO_PATH=/socket.io
SOCKET_IO_CORS_ORIGIN=*

# Cron Jobs
ENABLE_CRON_JOBS=true
MEETING_REMINDER_CRON=*/5 * * * *

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
